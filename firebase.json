{
  "hosting": [
    {
      "target": "takabase-dev-sharp",
      "public": "dist",
      "rewrites": [
        {
          "source": "**",
          "function": {
            "functionId": "sharp",
            "region": "us-central1"
          }
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "takabase-prod-sharp",
      "public": "dist",
      "rewrites": [
        {
          "source": "**",
          "function": {
            "functionId": "sharp",
            "region": "us-central1"
          }
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build:prod"
      ]
    }
  ]
}
